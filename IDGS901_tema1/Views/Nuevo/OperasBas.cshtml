
@{
    ViewBag.Title = "OperasBas";
}

<h2>OperasBas</h2>

<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <form action="/" method="post">
                <label>Numero 1</label>
                <input type="text" name="n1" value="" />
                <br />
                <label>Numero 2</label>
                <input type="text" name="n2" value="" />

                <br />

                <input type="radio" name="opera" value="suma"> <label for="suma">Suma</label>
                <br>
                <input type="radio" name="opera" value="resta"> <label for="resta">Resta</label>
                <br>
                <input type="radio" name="opera" value="multiplicacion"> <label for="multi">Multiplicacion</label>
                <br>
                <input type="radio" name="opera" value="division"> <label for="divi">Division</label>
                <br />
                <input type="submit" name="name" value="Calcular" />
            </form>

        </div>
        <div class="col-lg-6">
            <h1>Resultado: @ViewBag.Res</h1>
        </div>
    </div>
</div>
 